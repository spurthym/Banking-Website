extends baseTemplate

block content 
    // LOGIN FORM
    main.main
      .card-container
        .card
          .card__header
            .card__details
              h4.card__sub-heading Login
              p.ard__text Please enter the following Details
              .card__data
             
              form(action='/users/login' method='post')
                label(for='email') Email:
                input(type='text' id='email' name='email')
                label(for='password') Password:
                input(type='password' id='password' name='password')
                input.button( type='submit' value='Log In')

                if wrong_mail_password

                  p.ard__text Incorrect email and password
                else if no_email_password
                  p.ard__text Fields Cannot be Left Blank          
